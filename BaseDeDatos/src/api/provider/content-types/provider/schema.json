{
  "kind": "collectionType",
  "collectionName": "providers",
  "info": {
    "singularName": "provider",
    "pluralName": "providers",
    "displayName": "provider",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "whatsapp": {
      "type": "string"
    },
    "instagram": {
      "type": "string"
    },
    "terms": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "sobreNosotros": {
      "type": "text"
    },
    "image": {
      "type": "media",
