      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "products": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product.product",
      "mappedBy": "provider"
    },
    "eventos": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::evento.evento",
      "mappedBy": "provider"
    },
    "tipo": {
      "type": "enumeration",
      "enum": [
